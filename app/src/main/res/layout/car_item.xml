<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:padding="8dp"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/car_brand_textview"
        android:textSize="20sp"
        android:text="Toyota y el nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/car_passengers_textview"
        android:textSize="14sp"
        android:text="Passengers inside: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/car_year_textview"
        android:textSize="14sp"
        android:text="Year 2000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/car_doors_textview"
        android:textSize="12sp"
        android:text="Doors: 5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</LinearLayout>